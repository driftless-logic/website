---
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center gap-2">
        <div class="flex size-8 items-center justify-center rounded bg-primary text-black">
          <span class="material-symbols-outlined text-[24px]">terrain</span>
        </div>
        <span class="text-lg font-bold tracking-tight text-gray-900">Driftless<span class="text-primary">Logic</span></span>
      </a>
      <nav class="hidden md:flex items-center gap-8">
        <a class={`text-sm font-medium transition-colors ${currentPath === '/methodology' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`} href="/methodology">Methodology</a>
        <a class={`text-sm font-medium transition-colors ${currentPath === '/swarm' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`} href="/swarm">Swarm</a>
        <a class={`text-sm font-medium transition-colors ${currentPath === '/about' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`} href="/about">About</a>
        <a class={`text-sm font-medium transition-colors ${currentPath === '/contact' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`} href="/contact">Contact</a>
      </nav>
      <div class="flex items-center gap-3">
        <a href="/contact" class="flex items-center justify-center rounded-lg bg-black px-4 py-2 text-sm font-bold text-white hover:bg-gray-800 transition-all shadow-lg shadow-black/20">
          Let's Talk
        </a>
      </div>
    </div>
  </div>
</header>
